		// 객체 배열
		Student[] students = {
				new Student(101, "홍길동"),
				new Student(102, "김철수"),
				new Student(103, "하유리")
		};
		
		students[0].koreanSubject("국어", 90);
		students[0].mathSubject("수학", 50);
		
		students[1].koreanSubject("국어", 60);
		students[1].mathSubject("수학", 80);
		
		students[2].koreanSubject("국어", 70);
		students[2].mathSubject("수학", 70);
		// 전체 출력
		for(int i=0; i<students.length; i++) {
			students[i].showStudentInfo();
		}
		
	}

}
