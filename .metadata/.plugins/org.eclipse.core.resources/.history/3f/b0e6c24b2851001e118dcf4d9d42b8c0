package transport;

public class Main {

	public static void main(String[] args) {
		// 사람 객체 생성
		Person p1 = new Person("홍길동", 10000);
		Person p2 = new Person("김철수", 10000);
		
		// 버스 객체 생성
		Bus bus100 = new Bus(100);
		Bus bus200 = new Bus(200);
		
		p1.takeBus(bus100);
		p2.takeBus(bus200);
		
		p1.showPersonInfo();
		p2.showPersonInfo();
		bus100.showBusInfo();
		bus200.showBusInfo();

	}

}
